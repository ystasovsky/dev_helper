<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="res_groups_form" model="ir.ui.view">
            <field name="name">res.groups.form</field>
            <field name="model">res.groups</field>
            <field name="inherit_id" ref="base.view_groups_form"/>
            <field name="arch" type="xml">
                <page string="Inherited" position="after">
                  <page string="Parent Groups">
                      <group>
                          <field name="parent_groups"  string="parent_groups">
                              <tree>
                                  <field name="name"/>
                                  <field name="parent_groups"/>
                                  <field name="trans_parent_groups"/>
                                  <field name="implied_ids"/>
                                  <field name="trans_implied_ids"/>
                              </tree>
                          </field>
                          <field name="trans_parent_groups"  string="trans_parent_groups">
                              <tree>
                                  <field name="name"/>
                                  <field name="parent_groups"/>
                                  <field name="trans_parent_groups"/>
                                  <field name="implied_ids"/>
                                  <field name="trans_implied_ids"/>
                              </tree>
                          </field>
                      </group>
                  </page>

                </page>
            </field>
        </record>

    </data>
</openerp>